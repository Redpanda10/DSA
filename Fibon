#include<iostream>
using namespace std;
int recursion(int x,int a,int b,int c){
    if(x>0){
        c=a+b;
        cout<<a;
        a=b;
        b=c;
       return recursion(x-1,a,b,c); 
    }
    
    
    else 
    exit;
}

int main(){
    int x;
    cout<<"Enter the value of n to find the n-terms in fibonacci series "<<endl;
    cin>>x;
    recursion(x,0,1,0);
}
